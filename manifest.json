{
    "manifest_version": 3,
    "name": "Produtivity Mode",
    "description": "Enable productivty mode.",
    "version": "1.0",
    "icons": {
      "16": "images/icon-16.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    }, 
    "action": {    
        "default_popup": "popup.html"
    }, 
    "permissions": [
        "activeTab","storage"
    ], 
    "optional_host_permissions":[
        "https://*/*", 
        "http://*/*" 
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
        }
    ]
  }